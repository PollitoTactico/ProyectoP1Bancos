@model ProyectoP1Bancos.Models.Cuenta

@{
    Layout = "~/Views/Shared/_LayoutHetero.cshtml";
    ViewData["Title"] = "Create";
}

<h1>Crea tu Cuenta</h1>

<h4>Cuenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumCuenta" class="control-label">Numero de Cuenta:</label>
                <input asp-for="NumCuenta" class="form-control" />
                <span asp-validation-for="NumCuenta"class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
