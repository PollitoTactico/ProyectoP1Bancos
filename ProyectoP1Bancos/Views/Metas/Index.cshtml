@model IEnumerable<ProyectoP1Bancos.Models.Meta>

@{
    Layout = "~/Views/Shared/_LayoutHetero.cshtml";
    ViewData["Title"] = "Index";
}

<h1>Tu Meta</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreMeta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetaAhorro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMeta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaAhorro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMeta">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMeta">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMeta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
